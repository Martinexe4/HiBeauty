<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".article.DetailArticleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_content_container"
                android:layout_width="475dp"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- CardView untuk menampilkan gambar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp">

                        <!-- ImageView untuk menampilkan gambar -->
                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="wrap_content"
                            android:layout_height="250dp"
                            android:background="@drawable/rounded_corner"
                            android:contentDescription="@string/sample_image"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder_image" />
                    </androidx.cardview.widget.CardView>

                    <!-- TextView untuk judul artikel -->
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        tools:text="Sample Title" />

                    <!-- TextView untuk nama penulis -->
                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="Author: John Doe" />

                    <!-- TextView untuk tanggal terbit -->
                    <TextView
                        android:id="@+id/published_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="Published on: 2023-01-01" />

                    <!-- TextView untuk deskripsi artikel -->
                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_medium"
                        android:maxLines="3"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="@string/sample_desc_text" />

                    <!-- TextView untuk konten artikel -->
                    <TextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="@string/sample_text" />

                    <!-- ConstraintLayout untuk mengatur tombol di tengah -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/open_in_browser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_selector"
                            android:fontFamily="@font/poppins_medium"
                            android:text="@string/open_browser"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="TextContrastCheck" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- FloatingActionButton for close action -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/close"
        android:src="@drawable/ic_close"
        app:backgroundTint="@android:color/white"
        app:layout_anchorGravity="top|start" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>